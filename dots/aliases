# Emacs
alias emacs="emacs26"

# Cmus
pl(){pgrep -x cmus >/dev/null && cmus-remote -u || echo "cmus is not running"}
alias pa="pl"
sk(){pgrep -x cmus >/dev/null && cmus-remote -n || echo "cmus is not running"}
alias nowplaying="~/.linux/scripts/nowplaying.sh"

# Other scripts
